<div class="container">
  <div class="row">

    <div class="col-sm-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>

      <h2>New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class="col-sm-9">
      <% if params[:genre] == "user" %>
        <h2>Users</h2>
        <%= render 'users/index', users: @users %>
      <% elsif params[:genre] == "book" %>
        <h2>Books</h2>
        <%= render 'books/index', books: @books %>
      <% end %>
    </div>

  </div>
</div>
